<section class="form-auth container">
  <div class="row justify-content-center">
    <div class="col-6">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h1 class="h3 mb-3 fw-normal text-center">Please sign in</h1>

        <!--label for="inputEmail" class="sr-only">Email address</label-->
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mt-2", id: "inputEmail", placeholder: "Email address" %>
        <!--label for="inputPassword" class="sr-only">Password</label-->
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control mt-2", id: "inputPassword" %>

        <div class="checkbox mb-3">
          <label>
            <input type="checkbox" value="remember-me"> Remember me
          </label>
        </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
