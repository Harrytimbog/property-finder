<div class="property-main-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @property.photo.key%>')">

  <div class="photo-overlay">

  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-8">

      <p>
        <strong>Name:</strong>
        <%= @property.name %>
      </p>

      <p>
        <strong>Address:</strong>
        <%= @property.address %>
      </p>

      <p>
        <strong>Price:</strong>
        <%= @property.price %>
      </p>

      <p>
        <strong>Room:</strong>
        <%= @property.room %>
      </p>

      <p>
        <strong>Bathrooms:</strong>
        <%= @property.bathrooms %>
      </p>

      <%= link_to 'Edit Property', edit_property_path(@property), class: "btn btn-success" %> |
      <%= link_to 'Back', properties_path %>
    </div>
    <div class="col-4">
      <%= render "properties/agent_details"  %>
    </div>
    </div>
</div>

